{
  "$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["playwright-report/**", "migrations/**", "docs/.vitepress", "node_modules", ".next", "**/*.(svg,js)"]
  },
  "formatter": {
    "include": ["**/*.ts", "**/*.tsx", "**/*.json"],
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "linter": {
    "enabled": true
  }
}
