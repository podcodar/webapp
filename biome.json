{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"include": ["**/*.ts", "**/*.tsx"],
		"enabled": true,
		"formatWithErrors": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"ignore": ["node_modules", ".next", "packages/components/icons", "**/*.(svg,js)", "**/*/firestore.ts"]
	}
}
