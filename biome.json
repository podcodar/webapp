{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "tab",
    "indentSize": 2,
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "ignore": ["node_modules", ".next"],
    "rules": {
      "all": true,
      "complexity": {
        "noUselessFragments": "off"
      },
      "style": {
        "useSingleVarDeclarator": "off",
        "noParameterAssign": "off",
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      },
      "nursery": {
        "all": false
      }
    }
  }
}
