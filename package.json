{
  "name": "webapp",
  "homepage": "https://podcodar-webapp.web.app/",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "bun run db:generate && bun run db:migrate",
    "build": "next build",
    "build:static": "next build",
    "start": "next start",
    "encrypt": "gpg -c .env",
    "decrypt": "gpg -d .env.gpg > .env",
    "lint": "biome lint",
    "fmt": "biome check --write ",
    "e2e": "playwright test",
    "test": "bun test packages",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/layout": "^2.3.1",
    "@chakra-ui/next-js": "^2.2.0",
    "@chakra-ui/react": "^2.10.3",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@libsql/client": "^0.14.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.34.1",
    "eslint-config-next": "^14.2.12",
    "framer-motion": "^11.5.5",
    "i18next": "^23.15.1",
    "lefthook": "^1.7.15",
    "lodash": "^4.17.21",
    "next": "^14.2.12",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.2",
    "@playwright/test": "^1.47.1",
    "@types/bun": "^1.1.10",
    "@types/lodash": "^4.17.7",
    "@types/node": "^22.5.5",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "daisyui": "^4.12.10",
    "drizzle-kit": "^0.25.0",
    "lint-staged": "^15.2.10",
    "mermaid": "^11.3.0",
    "next-plugin-yaml": "^1.0.1",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitepress": "^1.3.4",
    "vitepress-carbon": "^1.4.5",
    "vitepress-plugin-mermaid": "^2.0.17"
  },
  "lint-staged": {
    "*.{md,svg}": "npx prettier --write",
    "**/*.{tsx,ts,js,jsx}": "biome check --write"
  },
  "engines": {
    "node": ">=18"
  },
  "volta": {
    "node": "20.17.0",
    "bun": "1.1.28"
  },
  "packageManager": "bun@1"
}
